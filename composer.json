{
  "name": "myplanet/skeletor",
  "description": "Skeletor Install Profile",
  "authors": [{
    "name": "Myplanet",
    "email": "hello@myplanet.com"
  }],
  "type": "drupal-profile",
  "bin": ["bin/skeletor-init-project.sh"],
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "require": {
    "drupal/config_split": "^1.3",
    "drupal/admin_toolbar": "1.15",
    "drupal/field_group": "3.0-beta1",
    "drupal/google_tag": "^1.0",
    "drupal/memcache": "^2.0@alpha",
    "drupal/metatag": "^1.5",
    "drupal/paragraphs": "^1.2",
    "drupal/pathauto": "^1.2",
    "drupal/rabbit_hole": "1.0-beta4",
    "drupal/robotstxt": "^1.2",
    "drupal/seckit": "1.0-alpha2",
    "drupal/svg_image": "1.8",
    "drupal/twig_tweak": "^2.0",
    "drupal/xmlsitemap": "1.0-alpha2",
    "drupal/crop": "^1.5",
    "drupal/entity_browser": "^1.5",
    "drupal/media_entity_browser": "^1.0@beta",
    "drupal/image_widget_crop": "^2.2",
    "drupal/focal_point": "^1.0@beta"
  },
  "require-dev": {
    "drupal/devel": "^1.2",
    "drupal/coder": "^8.2",
    "squizlabs/php_codesniffer": "^2.9"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "scripts/composer/BaseScriptHandler.php",
      "scripts/composer/PHPCSHandler.php",
      "scripts/composer/ProductionBuild.php"
    ]
  },
  "scripts": {
    "deploy": [
      "@composer install --prefer-dist --no-dev",
      "Skeletor\\composer\\ProductionBuild::placeGitIgnore",
      "Skeletor\\composer\\ProductionBuild::removeGitFolders"
    ],
    "pre-install-cmd": [],
    "pre-update-cmd": [],
    "post-package-install": [
      "Skeletor\\composer\\ProductionBuild::installNPM"
    ],
    "post-update-cmd": []
  }
}
